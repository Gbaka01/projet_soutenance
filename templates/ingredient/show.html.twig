{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <h1>Ingredient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ingredient.description }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td> 
                 <ul>
                        {% for categorie in ingredient.categories %}
                            <li>{{ categorie.description2 }}</li>
                        {% else %}
                            <li><em>Aucune cat√©gorie</em></li>
                        {% endfor %}
                    </ul>
                    </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_ingredient_index') }}" role="button">Retour vers l'accueil</a>

    <a class="btn btn-info" href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" role="button">Modifier</a>
{% if is_granted('ROLE_ADMIN') %}
    {{ include('ingredient/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
