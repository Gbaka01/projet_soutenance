{% extends 'base.html.twig' %}

{% block title %}Ingredient index{% endblock %}

{% block body %}
    <h1>Ingredient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Categories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.id }}</td>
                <td>{{ ingredient.description }}</td>
                <td>
                    <ul>
                        {% for categorie in ingredient.categories %}
                            <li>{{ categorie.description2 }}</li>
                        {% else %}
                            <li><em>Aucune catégorie</em></li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    {% if is_granted('ROLE_VISITEUR') %}
                        <a class="btn btn-warning" href="{{ path('app_ingredient_show', {'id': ingredient.id}) }}">Voir</a>
                        <a class="btn btn-info" href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun ingrédient trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_VISITEUR') %}
        <a class="btn btn-primary" href="{{ path('app_ingredient_new') }}">Créer nouveau</a>
    {% endif %}
{% endblock %}
